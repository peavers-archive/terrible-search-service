{
  "settings": {
    "analysis": {
      "analyzer": {
        "fscrawler_path": {
          "tokenizer": "keyword",
          "filter": [
            "word_delimiter",
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "keyword",
        "store": true
      },
      "absolutePath": {
        "type": "text",
        "analyzer": "fscrawler_path"
      }
    }
  }
}
